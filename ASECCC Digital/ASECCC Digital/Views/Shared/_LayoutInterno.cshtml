@{
    var nombreUsuario = Context.Session.GetString("NombreCompleto") ?? "";
    var nombrePerfil = Context.Session.GetString("NombrePerfil") ?? "";
    var perfilId = Context.Session.GetInt32("PerfilId") ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui" />
    <title>@(ViewData["Title"] ?? "ASECCC Digital")</title>
    <meta name="description" content="Sistema de Gestión ASECCC" />
    <link rel="icon" href="~/lib/img/ASECCC_LOGO_2.png" type="image/x-icon" />

    <!-- CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="~/lib/fonts/tabler-icons.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/fonts/feather.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/fonts/fontawesome.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/fonts/material.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/css/style-preset.css" asp-append-version="true">
</head>

<body data-pc-preset="preset-1" data-pc-direction="ltr" data-pc-theme="light">

    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>

    <!-- Sidebar -->
    <nav class="pc-sidebar">
        <div class="navbar-wrapper">
            <div class="m-header">
                <a asp-controller="Home" asp-action="Principal" class="b-brand text-primary">
                    <img src="~/lib/img/ASECCC_LOGO3.1.png" alt="Logo" />
                </a>
            </div>

            <div class="navbar-content">
                <ul class="pc-navbar">
                    <li class="pc-item">
                        <a asp-controller="Home" asp-action="Principal" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-dashboard"></i></span>
                            <span class="pc-mtext">Principal</span>
                        </a>
                    </li>

                    <li class="pc-item">
                        <a asp-controller="BeneficiosyServicios" asp-action="Index" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-gift"></i></span>
                            <span class="pc-mtext">Beneficios y Servicios</span>
                        </a>
                    </li>

                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-headset"></i></span>
                            <span class="pc-mtext">Contacto y Soporte</span>
                            <span class="pc-arrow"><i data-feather="chevron-right"></i></span>
                        </a>
                        <ul class="pc-submenu">
                            <li class="pc-item pc-caption">
                                <label>Ayuda</label>
                                <i class="ti ti-help"></i>
                            </li>

                            <li class="pc-item">
                                <a asp-controller="ContactoySoporte" asp-action="Contacto" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-mail"></i></span>
                                    <span class="pc-mtext">Contacto</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="ContactoySoporte" asp-action="Soporte" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-help"></i></span>
                                    <span class="pc-mtext">Soporte</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-user"></i></span>
                            <span class="pc-mtext">Mi Perfil</span>
                            <span class="pc-arrow"><i data-feather="chevron-right"></i></span>
                        </a>
                        <ul class="pc-submenu">
                            <li class="pc-item pc-caption">
                                <label>Perfil</label>
                                <i class="ti ti-user-circle"></i>
                            </li>

                            <li class="pc-item">
                                <a asp-controller="Usuario" asp-action="EditarPerfil" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-edit"></i></span>
                                    <span class="pc-mtext">Editar Perfil</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Usuario" asp-action="Seguridad" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-lock"></i></span>
                                    <span class="pc-mtext">Cambiar Contraseña</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-coin"></i></span>
                            <span class="pc-mtext">Préstamos</span>
                            <span class="pc-arrow"><i data-feather="chevron-right"></i></span>
                        </a>
                        <ul class="pc-submenu">
                            <li class="pc-item pc-caption">
                                <label>Gestión de Préstamos</label>
                                <i class="ti ti-report-money"></i>
                            </li>

                            <li class="pc-item">
                                <a asp-controller="Prestamos" asp-action="SolicitudPrestamo" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-file-plus"></i></span>
                                    <span class="pc-mtext">Solicitar Préstamo</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Prestamos" asp-action="ConsultaPrestamoAsociado" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-list"></i></span>
                                    <span class="pc-mtext">Mis Préstamos</span>
                                </a>
                            </li>

                            @if (perfilId == 2)
                            {
                                <li class="pc-item">
                                    <a asp-controller="Prestamos" asp-action="RevisionPrestamos" class="pc-link">
                                        <span class="pc-micon"><i class="ti ti-clipboard-check"></i></span>
                                        <span class="pc-mtext">Revisar Solicitudes</span>
                                    </a>
                                </li>
                                <li class="pc-item">
                                    <a asp-controller="Prestamos" asp-action="GestionSolicitudes" class="pc-link">
                                        <span class="pc-micon"><i class="ti ti-settings"></i></span>
                                        <span class="pc-mtext">Gestionar Solicitudes</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-chart-bar"></i></span>
                            <span class="pc-mtext">Reportes</span>
                            <span class="pc-arrow"><i data-feather="chevron-right"></i></span>
                        </a>
                        <ul class="pc-submenu">
                            <li class="pc-item pc-caption">
                                <label>Informes y Estadísticas</label>
                                <i class="ti ti-file-analytics"></i>
                            </li>

                            <li class="pc-item">
                                <a asp-controller="Reportes" asp-action="ResumenFinanciero" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-dashboard"></i></span>
                                    <span class="pc-mtext">Resumen Financiero</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Reportes" asp-action="EstadoCuenta" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-file-text"></i></span>
                                    <span class="pc-mtext">Estado de Cuenta</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="pc-item pc-hasmenu">
                        <a href="#!" class="pc-link">
                            <span class="pc-micon"><i class="ti ti-wallet"></i></span>
                            <span class="pc-mtext">Ahorros y Aportes</span>
                            <span class="pc-arrow"><i data-feather="chevron-right"></i></span>
                        </a>
                        <ul class="pc-submenu">
                            <li class="pc-item pc-caption">
                                <label>Asociado</label>
                                <i class="ti ti-user"></i>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Ahorros" asp-action="MisAhorros" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-wallet"></i></span>
                                    <span class="pc-mtext">Mis Ahorros</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Aportes" asp-action="MisAportes" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-coin"></i></span>
                                    <span class="pc-mtext">Mis Aportes</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Notificaciones" asp-action="NotificacionesUsuario" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-bell"></i></span>
                                    <span class="pc-mtext">Mis Notificaciones</span>
                                </a>
                            </li>

                            <li class="pc-item pc-caption">
                                <label>Administrador</label>
                                <i class="ti ti-shield"></i>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Ahorros" asp-action="Gestionar" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-settings"></i></span>
                                    <span class="pc-mtext">Gestionar Ahorros</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Aportes" asp-action="Gestionar" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-settings"></i></span>
                                    <span class="pc-mtext">Gestionar Aportes</span>
                                </a>
                            </li>
                            <li class="pc-item">
                                <a asp-controller="Notificaciones" asp-action="NotificacionesAdmin" class="pc-link">
                                    <span class="pc-micon"><i class="ti ti-bell-ringing"></i></span>
                                    <span class="pc-mtext">Notificaciones</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    @if (perfilId == 2)
                    {
                        <li class="pc-item pc-hasmenu">
                            <a href="#!" class="pc-link">
                                <span class="pc-micon"><i class="ti ti-users"></i></span>
                                <span class="pc-mtext">Asociados</span>
                                <span class="pc-arrow"><i data-feather="chevron-right"></i></span>
                            </a>
                            <ul class="pc-submenu">
                                <li class="pc-item pc-caption">
                                    <label>Gestión de Asociados</label>
                                    <i class="ti ti-news"></i>
                                </li>
                                <li class="pc-item">
                                    <a asp-controller="Usuario" asp-action="BuscarDesactivarAsociado" class="pc-link">
                                        <span class="pc-micon"><i class="ti ti-search"></i></span>
                                        <span class="pc-mtext">Buscar y Desactivar</span>
                                    </a>
                                </li>
                                <li class="pc-item">
                                    <a asp-controller="Usuario" asp-action="LiquidarAsociado" class="pc-link">
                                        <span class="pc-micon"><i class="ti ti-report-money"></i></span>
                                        <span class="pc-mtext">Liquidar Asociado</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="pc-header">
        <div class="header-wrapper">

            <div class="me-auto pc-mob-drp">
                <ul class="list-unstyled">
                    <li class="pc-h-item pc-sidebar-collapse">
                        <a href="#" class="pc-head-link ms-0" id="sidebar-hide">
                            <i class="ti ti-menu-2"></i>
                        </a>
                    </li>
                    <li class="pc-h-item pc-sidebar-popup">
                        <a href="#" class="pc-head-link ms-0" id="mobile-collapse">
                            <i class="ti ti-menu-2"></i>
                        </a>
                    </li>
                    <li class="dropdown pc-h-item d-inline-flex d-md-none">
                        <a class="pc-head-link dropdown-toggle arrow-none m-0"
                           data-bs-toggle="dropdown"
                           href="#"
                           role="button"
                           aria-haspopup="false"
                           aria-expanded="false">
                            <i class="ti ti-search"></i>
                        </a>
                        <div class="dropdown-menu pc-h-dropdown drp-search">
                            <form class="px-3">
                                <div class="form-group mb-0 d-flex align-items-center">
                                    <i data-feather="search"></i>
                                    <input type="search" class="form-control border-0 shadow-none" placeholder="Search here. . .">
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="ms-auto">
                <div class="dropdown pc-h-item">
                    <a class="pc-head-link dropdown-toggle" data-bs-toggle="dropdown" href="#">
                        <img src="~/lib/img/avatar-2.jpg" class="user-avtar" />
                        <span>@nombreUsuario</span>
                    </a>

                    <div class="dropdown-menu dropdown-user-profile dropdown-menu-end">

                        <div class="dropdown-header">
                            <div class="d-flex mb-1">
                                <div class="flex-shrink-0">
                                    <img src="~/lib/img/avatar-2.jpg" alt="user-image" class="user-avtar wid-35">
                                </div>
                                <div class="flex-grow-1 ms-3" style="min-width: 0;">
                                    <h6 class="mb-1" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @nombreUsuario
                                    </h6>
                                    <span>@nombrePerfil</span>
                                </div>
                            </div>
                        </div>

                        <a asp-controller="Usuario" asp-action="EditarPerfil" class="dropdown-item">Editar Perfil</a>
                        <a asp-controller="Usuario" asp-action="Seguridad" class="dropdown-item">Seguridad</a>
                        <a asp-controller="Home" asp-action="CerrarSesion" class="dropdown-item text-danger">Cerrar Sesión</a>

                        <div class="dropdown-divider"></div>
                        <a asp-action="EditarPerfil" asp-controller="Usuario" class="dropdown-item">
                            <i class="ti ti-edit-circle"></i>
                            <span>Editar Perfil</span>
                        </a>
                        <a asp-action="Seguridad" asp-controller="Usuario" class="dropdown-item">
                            <i class="ti ti-settings"></i>
                            <span>Seguridad</span>
                        </a>
                        <a asp-action="CerrarSesion" asp-controller="Home" class="dropdown-item">
                            <i class="ti ti-power"></i>
                            <span>Cerrar Sesión</span>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content -->
    <div class="pc-container">
        <div class="pc-content">
            @RenderBody()
        </div>
    </div>

    <footer class="pc-footer">
        <p class="m-0">© ASECCC Digital @DateTime.Now.Year</p>

        <div class="footer-wrapper container-fluid">
            <div class="row">
                <div class="col-sm my-1">
                    <p class="m-0">
                        © ASECCC Digital @DateTime.Now.Year, Made by
                        <a href="https://themeforest.net/user/codedthemes" target="_blank">Codedthemes</a>
                        &amp;
                        <a href="https://themewagon.com/" target="_blank">ThemeWagon</a>.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS  -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/lib/js/simplebar.min.js" asp-append-version="true"></script>
    <script src="~/lib/js/custom-font.js" asp-append-version="true"></script>
    <script src="~/lib/js/feather.min.js" asp-append-version="true"></script>
    <script src="~/lib/js/pcoded.js" asp-append-version="true"></script>
    <script src="~/lib/js/comunes.js" asp-append-version="true"></script>
    <script>
        if (typeof layout_change === "function") layout_change('light');
        if (typeof change_box_container === "function") change_box_container('false');
        if (typeof layout_rtl_change === "function") layout_rtl_change('false');
        if (typeof preset_change === "function") preset_change("preset-1");
        if (typeof font_change === "function") font_change("Public-Sans");
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        console.log("Layout loaded => Swal:", typeof Swal, "jQuery:", typeof $);
    </script>
</body>
</html>
