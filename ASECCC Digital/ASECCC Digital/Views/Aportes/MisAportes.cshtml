@model IEnumerable<ASECCC_Digital.Models.AporteViewModel>

@{
    Layout = "_LayoutInterno";
    ViewData["Title"] = "Mis Aportes";

    var usuarioId = Context.Session.GetInt32("UsuarioId") ?? 1;
}

<input type="hidden" id="usuarioId" value="@usuarioId" />

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Mis Aportes</h5>
                <button class="btn btn-primary btn-sm" type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#modalNuevoAporte">
                    <i class="ti ti-plus"></i> Nuevo Aporte
                </button>
            </div>

            <div class="card-body">
                <div class="table-responsive mt-3">
                    <table class="table table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo de Aporte</th>
                                <th>Monto</th>
                                <th>Fecha Registro</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var aporte in Model)
                                {
                                    <tr>
                                        <td>@aporte.TipoAporte</td>
                                        <td>₡@aporte.Monto.ToString("N2")</td>
                                        <td>@(aporte.FechaRegistro.HasValue? aporte.FechaRegistro.Value.ToString("dd/MM/yyyy") : "-")</td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-secondary"
                                                    onclick="verHistorial('@aporte.TipoAporte')">
                                                Historial
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        No aportes registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- MODAL NUEVO APORTE -->
<div class="modal fade" id="modalNuevoAporte" tabindex="-1" aria-labelledby="modalNuevoAporteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNuevoAporteLabel">Nuevo Aporte</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="frmNuevoAporte">
                    <div class="mb-3">
                        <label for="tipoAporteNuevo" class="form-label">Tipo de Aporte</label>
                        <select class="form-select" id="tipoAporteNuevo" required>
                            <option value="">Seleccione...</option>
                            <option value="Ordinario">Ordinario</option>
                            <option value="Extraordinario">Extraordinario</option>
                            <option value="Voluntario">Voluntario</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="montoAporteNuevo" class="form-label">Monto</label>
                        <input type="number"
                               class="form-control"
                               id="montoAporteNuevo"
                               min="1000"
                               step="0.01"
                               placeholder="Ej: 25000"
                               required />
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary">
                            Guardar Aporte
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function asegurarLibs() {
            if (typeof $ === "undefined") { alert(" no cargo"); return false; }
            if (typeof Swal === "undefined") { alert("no cargo"); return false; }
            return true;
        }

        function verHistorial(tipoAporte) {
            if (!asegurarLibs()) return;

            $.get('@Url.Action("Historial", "Aportes")', { tipoAporte: tipoAporte })
                .done(function (html) {
                    Swal.fire({
                        title: 'Historial - ' + tipoAporte,
                        html: html,
                        width: 900
                    });
                })
                .fail(function () {
                    Swal.fire('Error', 'No se pudo cargar', 'error');
                });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('frmNuevoAporte');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                e.preventDefault();

                const usuarioId = parseInt(document.getElementById('usuarioId').value);
                const tipoAporte = document.getElementById('tipoAporteNuevo').value;
                const monto = parseFloat(document.getElementById('montoAporteNuevo').value);

                if (!tipoAporte || isNaN(monto) || monto <= 0) {
                    alert('Complete correctamente los datos');
                    return;
                }

                const payload = { usuarioId, tipoAporte, monto };

                fetch('@Url.Action("CrearAporte", "Aportes")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                })
                .then(resp => {
                    if (!resp.ok) return resp.text().then(t => { throw new Error(t || 'Error en el server'); });
                    return resp.json();
                })
                .then(() => {
                    const modalEl = document.getElementById('modalNuevoAporte');
                    const modalInstance = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                    modalInstance.hide();

                    form.reset();
                    window.location.reload();
                })
                .catch(err => {
                    console.error(err);
                    alert('Error al guardar el aporte');
                });
            });
        });
    </script>
}
