@model IEnumerable<ASECCC_Digital.Models.NotificacionAdminResumenViewModel>

@{
    Layout = "_LayoutInterno";
    ViewData["Title"] = "Notificaciones Admin";
}

@section PageHeader {
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Notificaciones</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Principal">Home</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">Notificaciones</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mb-3">
    <div class="col-md-12 text-end">
        <a asp-controller="Notificaciones" asp-action="Crear" class="btn btn-primary">
            <i class="ti ti-plus"></i> Nueva Notificacion
        </a>
    </div>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Titulo</th>
                                <th>Enviada a</th>
                                <th>Fecha</th>
                                <th class="text-end">Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var n in Model)
                                {
                                    <tr>
                                        <td>@n.Titulo</td>
                                        <td>@n.EnviadaA</td>
                                        <td>@(n.FechaEnvio.HasValue? n.FechaEnvio.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                                        <td class="text-end">@n.Cantidad</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">No hay notificaciones.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
