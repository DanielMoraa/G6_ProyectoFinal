@model UsuarioModel
@{
    Layout = "_LayoutExterno";
}

<div class="loader-bg">
    <div class="loader-track">
        <div class="loader-fill"></div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-controller="Home" asp-action="Registro">
        <img src="~/lib/img/ASECCC_LOGO3.1.png" alt="Logo">
    </a>
</div>


<div class="auth-main d-flex justify-content-center">
    <div class="auth-wrapper v3 min-vh-100 d-flex align-items-center">

        <div class="auth-form">
            <div class="card my-5">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-end mb-4">
                        <h3 class="mb-0"><b>Recuperar Acceso</b></h3>
                        <a asp-controller="Home" asp-action="Login" class="link-primary">
                            ¿Ya tienes una cuenta?
                        </a>
                    </div>

                    <form asp-action="RecuperarAcceso" asp-controller="Home" method="POST">
                        <div class="form-group mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" asp-for="CorreoElectronico"
                                   placeholder="Ingrese su correo electrónico" />
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">Procesar</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
