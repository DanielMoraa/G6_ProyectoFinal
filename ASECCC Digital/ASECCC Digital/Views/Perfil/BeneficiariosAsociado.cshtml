@{
    ViewBag.Title = "Beneficiarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.Partial("_MenuModulos");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <!-- Card para Beneficiarios -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Gestión de Beneficiarios</h3>
                </div>
                <div class="card-body">
                    <!-- Botón para Agregar Beneficiario -->
                    <button class="btn btn-success mb-4" data-bs-toggle="modal" data-bs-target="#modalAgregarBeneficiario">
                        <i class="bi bi-person-plus"></i> Agregar Beneficiario
                    </button>

                    <!-- Tabla de Beneficiarios -->
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Cédula</th>
                                <th>Teléfono</th>
                                <th>%</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Aquí irían los beneficiarios listados desde el modelo o base de datos -->
                            <tr>
                                <td>Juan Pérez</td>
                                <td>123456789</td>
                                <td>+1234567890</td>
                                <td>15%</td>
                            </tr>
                            <tr>
                                <td>Ana Gómez</td>
                                <td>987654321</td>
                                <td>+0987654321</td>
                                <td>10%</td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Botones de acción (editar y eliminar) debajo de la tabla -->
                    <div class="d-flex justify-content-between mt-4">
                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalEditarBeneficiario">
                            Editar Beneficiario
                        </button>
                        <button class="btn btn-danger btn-sm">
                            Eliminar Beneficiario
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar beneficiario -->
<div class="modal fade" id="modalAgregarBeneficiario" tabindex="-1" aria-labelledby="modalAgregarBeneficiarioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAgregarBeneficiarioLabel">Agregar Beneficiario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formAgregarBeneficiario">
                    <div class="mb-3">
                        <label for="nombreBeneficiario" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreBeneficiario" placeholder="Nombre del beneficiario" required>
                    </div>
                    <div class="mb-3">
                        <label for="cedulaBeneficiario" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedulaBeneficiario" placeholder="Cédula del beneficiario" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefonoBeneficiario" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="telefonoBeneficiario" placeholder="Número de teléfono" required>
                    </div>
                    <div class="mb-3">
                        <label for="porcentajeBeneficio" class="form-label">Porcentaje</label>
                        <input type="number" class="form-control" id="porcentajeBeneficio" placeholder="Porcentaje" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="agregarBeneficiario()">Agregar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para editar beneficiario -->
<div class="modal fade" id="modalEditarBeneficiario" tabindex="-1" aria-labelledby="modalEditarBeneficiarioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarBeneficiarioLabel">Editar Beneficiario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarBeneficiario">
                    <div class="mb-3">
                        <label for="editarNombreBeneficiario" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="editarNombreBeneficiario" value="Juan Pérez" required>
                    </div>
                    <div class="mb-3">
                        <label for="editarCedulaBeneficiario" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="editarCedulaBeneficiario" value="123456789" required>
                    </div>
                    <div class="mb-3">
                        <label for="editarTelefonoBeneficiario" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="editarTelefonoBeneficiario" value="+1234567890" required>
                    </div>
                    <div class="mb-3">
                        <label for="editarPorcentajeBeneficio" class="form-label">Porcentaje de Beneficio</label>
                        <input type="number" class="form-control" id="editarPorcentajeBeneficio" value="15" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="editarBeneficiario()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function agregarBeneficiario() {
        var nombre = document.getElementById("nombreBeneficiario").value;
        var cedula = document.getElementById("cedulaBeneficiario").value;
        var telefono = document.getElementById("telefonoBeneficiario").value;
        var porcentaje = document.getElementById("porcentajeBeneficio").value;

        // Aquí se podría agregar la lógica para guardar el beneficiario en la base de datos
        // Actualizar la tabla de beneficiarios (simulado con un alert)
        alert("Beneficiario agregado: " + nombre);

        var modalAgregarBeneficiario = new bootstrap.Modal(document.getElementById('modalAgregarBeneficiario'));
        modalAgregarBeneficiario.hide();
    }

    function editarBeneficiario() {
        var nombre = document.getElementById("editarNombreBeneficiario").value;
        var cedula = document.getElementById("editarCedulaBeneficiario").value;
        var telefono = document.getElementById("editarTelefonoBeneficiario").value;
        var porcentaje = document.getElementById("editarPorcentajeBeneficio").value;

        // Aquí se podría agregar la lógica para guardar los cambios en la base de datos
        // Actualizar la tabla de beneficiarios (simulado con un alert)
        alert("Beneficiario editado: " + nombre);

        var modalEditarBeneficiario = new bootstrap.Modal(document.getElementById('modalEditarBeneficiario'));
        modalEditarBeneficiario.hide();
    }
</script>

