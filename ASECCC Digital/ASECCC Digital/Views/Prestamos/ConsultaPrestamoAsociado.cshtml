@model List<SolicitudPrestamoCompletaModel>

@{
    ViewBag.Title = "ConsultaPrestamoAsociado";
    Layout = "_LayoutInterno";
}

<div class="container my-5">
    <div class="card mb-4 mt-4">
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-info text-center">
                @ViewBag.Mensaje
            </div>
        }

        <h4 class="card-header text-center">Mis Solicitudes de Préstamo</h4>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Tipo</th>
                                <th>Monto Solicitado</th>
                                <th>Cuota Semanal</th>
                                <th>Plazo (meses)</th>
                                <th>Propósito</th>
                                <th>Estado</th>
                                <th>Fecha Solicitud</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model)
                            {
                                <tr>
                                    <td>@solicitud.TipoPrestamo</td>
                                    <td>₡@solicitud.MontoSolicitud.ToString("N2")</td>
                                    <td>₡@solicitud.CuotaSemanalSolicitud.ToString("N2")</td>
                                    <td>@solicitud.PlazoMeses</td>
                                    <td>@solicitud.PropositoPrestamo</td>
                                    <td>
                                        @if (solicitud.EstadoSolicitud == "Aprobada")
                                        {
                                            <span class="badge bg-success">@solicitud.EstadoSolicitud</span>
                                        }
                                        else if (solicitud.EstadoSolicitud == "Rechazada")
                                        {
                                            <span class="badge bg-danger">@solicitud.EstadoSolicitud</span>
                                        }
                                        else if (solicitud.EstadoSolicitud == "Pendiente")
                                        {
                                            <span class="badge bg-warning">@solicitud.EstadoSolicitud</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@solicitud.EstadoSolicitud</span>
                                        }
                                    </td>
                                    <td>@solicitud.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary"
                                                onclick="verDetalleSolicitud(@solicitud.SolicitudPrestamoId)">
                                            Ver Detalle
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center">No tiene solicitudes de préstamo registradas</p>
            }

            <div class="text-center mt-3">
                <a asp-action="SolicitudPrestamo" class="btn btn-success">Nueva Solicitud</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/verDetalleSolicitud.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: '¡Éxito!',
                        text: '@Html.Raw(TempData["SuccessMessage"])',
                        showConfirmButton: true,
                        confirmButtonText: 'Aceptar'
                    });
                    </text>
            }
        });
    </script>
    @await Html.PartialAsync("_SolicitudDetalles")


}
