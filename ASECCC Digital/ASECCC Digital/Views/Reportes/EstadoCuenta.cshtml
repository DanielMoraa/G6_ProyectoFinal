@model EstadoCuentaModel

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="container">
    <div class="pc-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h2 class="mb-0">Estado de Cuenta</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model?.Usuario != null)
        {
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Información del Usuario</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Nombre:</strong> @Model.Usuario.NombreCompleto</p>
                                    <p><strong>Identificación:</strong> @Model.Usuario.Identificacion</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Correo:</strong> @Model.Usuario.CorreoElectronico</p>
                                    <p><strong>Teléfono:</strong> @Model.Usuario.Telefono</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.SolicitudesPrestamo != null && Model.SolicitudesPrestamo.Any())
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Solicitudes de Préstamo</h5>
                            </div>

                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table align-middle table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Monto</th>
                                                <th>Cuota Semanal</th>
                                                <th>Plazo</th>
                                                <th>Estado</th>
                                                <th>Fecha</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sp in Model.SolicitudesPrestamo)
                                            {
                                                <tr>
                                                    <td>@sp.TipoPrestamo</td>
                                                    <td>₡@sp.MontoSolicitud.ToString("N2")</td>
                                                    <td>₡@sp.CuotaSemanalSolicitud.ToString("N2")</td>
                                                    <td>@sp.PlazoMeses meses</td>
                                                    <td>
                                                        <span class="badge
                                                    @(sp.EstadoSolicitud == "Aprobada" ? "bg-success" :
                                                                                                        sp.EstadoSolicitud == "Rechazada" ? "bg-danger" :
                                                                                                        sp.EstadoSolicitud == "En Revisión" ? "bg-warning text-dark" :
                                                                                                        "bg-secondary")">
                                                @sp.EstadoSolicitud
                                            </span>
                                        </td>
                                        <td>@sp.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }


                    @if (Model.Ahorros != null && Model.Ahorros.Any())
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5>Cuentas de Ahorro</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Monto Inicial</th>
                                                <th>Monto Actual</th>
                                                <th>Fecha Inicio</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ahorro in Model.Ahorros)
                                            {
                                                <tr>
                                                    <td>@ahorro.TipoAhorro</td>
                                                    <td>₡@ahorro.MontoInicial.ToString("N2")</td>
                                                    <td>₡@ahorro.MontoActual.ToString("N2")</td>
                                                    <td>@ahorro.FechaInicio?.ToString("dd/MM/yyyy")</td>
                                                    <td><span class="badge bg-success">@ahorro.Estado</span></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Aportes != null && Model.Aportes.Any())
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5>Aportes</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Monto</th>
                                                <th>Fecha Registro</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var aporte in Model.Aportes)
                                            {
                                                <tr>
                                                    <td>@aporte.TipoAporte</td>
                                                    <td>₡@aporte.Monto.ToString("N2")</td>
                                                    <td>@aporte.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <p class="mb-0">No se pudo cargar la información del estado de cuenta.</p>
            </div>
        }
    </div>
</div>