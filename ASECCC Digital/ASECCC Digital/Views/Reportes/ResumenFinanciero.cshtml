@model ResumenFinancieroModel
@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<section id="hero" class="hero section">
    <div class="hero-background">
        <img src="~/assets/img/wallpaper/wp3404276.jpg" alt="Fondo" class="img-fluid" />
    </div>
    <div class="container hero-content text-center text-black">
        <h1 class="display-4">¡Bienvenidos a ASECCC Digital!</h1>
        <p class="lead">Estamos comprometidos a brindarte lo mejor.</p>
    </div>
</section>

<div class="pc-container">
    <div class="pc-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h2 class="mb-0">Resumen Financiero</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Tarjeta: Total Préstamos -->
            <div class="col-md-6 col-xl-4">
                <div class="card bg-primary-dark dashnum-card text-white overflow-hidden">
                    <span class="round small"></span>
                    <span class="round big"></span>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="avtar avtar-lg">
                                    <i class="ti ti-coin text-white f-28"></i>
                                </div>
                            </div>
                            <div class="col-auto">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item">Préstamos</li>
                                    <li class="list-inline-item">
                                        <h4 class="text-white mb-0">₡@Model.TotalPrestamos.ToString("N2")</h4>
                                    </li>
                                    <li class="list-inline-item">
                                        <span class="badge bg-light-primary">@Model.CantidadPrestamos activos</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta: Total Ahorros -->
            <div class="col-md-6 col-xl-4">
                <div class="card bg-success-dark dashnum-card text-white overflow-hidden">
                    <span class="round small"></span>
                    <span class="round big"></span>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="avtar avtar-lg">
                                    <i class="ti ti-piggy-bank text-white f-28"></i>
                                </div>
                            </div>
                            <div class="col-auto">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item">Ahorros</li>
                                    <li class="list-inline-item">
                                        <h4 class="text-white mb-0">₡@Model.TotalAhorros.ToString("N2")</h4>
                                    </li>
                                    <li class="list-inline-item">
                                        <span class="badge bg-light-success">@Model.CantidadAhorros cuentas</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta: Total Aportes -->
            <div class="col-md-6 col-xl-4">
                <div class="card bg-warning-dark dashnum-card text-white overflow-hidden">
                    <span class="round small"></span>
                    <span class="round big"></span>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="avtar avtar-lg">
                                    <i class="ti ti-wallet text-white f-28"></i>
                                </div>
                            </div>
                            <div class="col-auto">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item">Aportes</li>
                                    <li class="list-inline-item">
                                        <h4 class="text-white mb-0">₡@Model.TotalAportes.ToString("N2")</h4>
                                    </li>
                                    <li class="list-inline-item">
                                        <span class="badge bg-light-warning">@Model.CantidadAportes registros</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-info">
                @ViewBag.Mensaje
            </div>
        }
    </div>
</div>