@model ResumenFinancieroModel
@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<!-- HEADER LIMPIO -->
<section class="bg-light py-5 mb-4 border-bottom">
    <div class="container text-center">
        <h1 class="fw-bold mb-2">ASECCC Digital</h1>
        <p class="text-muted mb-0">
            Estamos comprometidos a brindarte lo mejor
        </p>
    </div>
</section>

<div class="container">
    <div class="row justify-content-start">

        <!-- TÍTULO -->
        <div class="mb-4">
            <h2 class="fw-semibold">Resumen Financiero</h2>
            <p class="text-muted mb-0">
                Vista general de tu situación actual
            </p>
        </div>

        <div class="row g-4">

            <!-- PRÉSTAMOS -->
            <div class="col-md-6 col-xl-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">

                        <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                <i class="ti ti-coin text-primary fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-muted">Préstamos</h6>
                                <small class="text-muted">Activos</small>
                            </div>
                        </div>

                        <h3 class="fw-bold text-primary mb-1">
                            ₡@Model.TotalPrestamos.ToString("N2")
                        </h3>

                        <span class="badge bg-primary bg-opacity-10 text-primary">
                            @Model.CantidadPrestamos activos
                        </span>
                    </div>
                </div>
            </div>

            <!-- AHORROS -->
            <div class="col-md-6 col-xl-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">

                        <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                <i class="ti ti-wallet text-success fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-muted">Ahorros</h6>
                                <small class="text-muted">Cuentas</small>
                            </div>
                        </div>

                        <h3 class="fw-bold text-success mb-1">
                            ₡@Model.TotalAhorros.ToString("N2")
                        </h3>

                        <span class="badge bg-success bg-opacity-10 text-success">
                            @Model.CantidadAhorros cuentas
                        </span>
                    </div>
                </div>
            </div>

            <!-- APORTES -->
            <div class="col-md-6 col-xl-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">

                        <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                                <i class="ti ti-wallet text-warning fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-muted">Aportes</h6>
                                <small class="text-muted">Registros</small>
                            </div>
                        </div>

                        <h3 class="fw-bold text-warning mb-1">
                            ₡@Model.TotalAportes.ToString("N2")
                        </h3>

                        <span class="badge bg-warning bg-opacity-10 text-warning">
                            @Model.CantidadAportes registros
                        </span>
                    </div>
                </div>
            </div>

        </div>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-info mt-4">
                @ViewBag.Mensaje
            </div>
        }

    </div>
</div>
