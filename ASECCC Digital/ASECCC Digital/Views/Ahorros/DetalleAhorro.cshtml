@model ASECCC_Digital.Models.AhorroViewModel

@if (Model == null)
{
    <div class="alert alert-warning mb-0">
        No se encontró información del ahorro.
    </div>
}
else
{
    <div class="text-start">
        <p class="mb-1"><strong>Asociado:</strong> @Model.NombreAsociado</p>
        <p class="mb-1"><strong>Tipo de ahorro:</strong> @Model.TipoAhorro</p>

        <p class="mb-1">
            <strong>Monto inicial:</strong> ₡@Model.MontoInicial.ToString("N2")
        </p>

        <p class="mb-1">
            <strong>Monto actual:</strong> ₡@Model.MontoActual.ToString("N2")
        </p>

        <p class="mb-1"><strong>Estado:</strong> @Model.Estado</p>

        <p class="mb-1">
            <strong>Fecha de inicio:</strong> @(Model.FechaInicio.HasValue? Model.FechaInicio.Value.ToString("dd/MM/yyyy") : "-")
        </p>

        @if (Model.Plazo.HasValue)
        {
            <p class="mb-0"><strong>Plazo:</strong> @Model.Plazo meses</p>
        }
    </div>
}
