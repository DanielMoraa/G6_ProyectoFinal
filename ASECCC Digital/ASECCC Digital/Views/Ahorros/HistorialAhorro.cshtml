@model IEnumerable<ASECCC_Digital.Models.AhorroTransaccionViewModel>

<table class="table table-sm table-striped mb-0">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Monto</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var t in Model)
            {
                <tr>
                    <td>@t.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@t.Tipo</td>
                    <td>₡@t.Monto.ToString("N2")</td>
                    <td>@t.Descripcion</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    No hay transacciones
                </td>
            </tr>
        }
    </tbody>
</table>
