@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<ASECCC_Digital.Models.AhorroViewModel>

@{
    Layout = "_LayoutInterno";
    ViewData["Title"] = "Mis Ahorros";
}

<div class="row">
    <div class="col-md-12">

        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Mis Ahorros</h5>

                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalNuevoAhorro">
                    + Nuevo Ahorro
                </button>
            </div>

            <div class="card-body">

                <div class="table-responsive mt-2">
                    <table class="table table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo de Ahorro</th>
                                <th>Monto Inicial</th>
                                <th>Monto Actual</th>
                                <th>Estado</th>
                                <th>Fecha Inicio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var ahorro in Model)
                                {
                                    var badge = ahorro.Estado == "Activo"
                                    ? "bg-success"
                                    : "bg-secondary";

                                    <tr>
                                        <td>@ahorro.TipoAhorro</td>
                                        <td>₡@ahorro.MontoInicial.ToString("N2")</td>
                                        <td>₡@ahorro.MontoActual.ToString("N2")</td>
                                        <td>
                                            <span class="badge @badge">@ahorro.Estado</span>
                                        </td>
                                        <td>@ahorro.FechaInicio?.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        No tienes ahorros
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewBag.Error
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger mt-3">
                        @TempData["Error"]
                    </div>
                }

                <div class="modal fade" id="modalNuevoAhorro" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <form asp-controller="Ahorros" asp-action="CrearAhorro" method="post">
                                <div class="modal-header">
                                    <h5 class="modal-title">Crear Ahorro</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body">

                                    <div class="mb-3">
                                        <label class="form-label">Tipo de ahorro</label>
                                        <select class="form-select" name="TipoAhorroId" required>
                                            <option value="">-- Seleccione --</option>

                                            @if (ViewBag.TiposAhorro != null)
                                            {
                                                foreach (var t in (IEnumerable<SelectListItem>)ViewBag.TiposAhorro)
                                                {
                                                    <option value="@t.Value">@t.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Monto inicial</label>
                                        <input type="number" name="MontoInicial" class="form-control" min="1" step="0.01" required />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Plazo (meses) (opcional)</label>
                                        <input type="number" name="Plazo" class="form-control" min="1" />
                                    </div>

                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Crear</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
