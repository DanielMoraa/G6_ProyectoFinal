@model UsuarioModel
@{
    Layout = "_LayoutInterno";
}
<div class="card mb-4 mt-4">
    <h4 class="card-header text-center">
        Administración de Asociados
    </h4>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tablaAsociados" class="table table-bordered w-100">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Identificación</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalLiquidacion" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Liquidar rubros del asociado</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold text-center" id="nombreAsociadoModal"></p>
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Tipo</th>
                            <th>Descripción</th>
                            <th>Saldo</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody id="tablaRubrosModal"></tbody>
                </table>
                <div id="sinRubrosModal" class="text-center text-warning d-none">
                    No hay rubros activos.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/AsociadosAdmin.js" asp-append-version="true"></script>
}
<style>
    .swal2-container {
        z-index: 10000 !important;
    }

        .swal2-container.swal2-backdrop-show {
            background: rgba(0, 0, 0, 0.6) !important;
        }
</style>
<style>
    /* DataTables styling */
    table.dataTable thead th {
        background: #111;
        color: #fff;
        border-bottom: none;
    }

    table.dataTable tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.03);
    }

    .dataTables_wrapper .btn {
        padding: 4px 8px;
    }
</style>